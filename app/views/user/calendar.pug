extends ../_layout

block app-title
    | Calendar | EventManagementSystem

block vars
   - var bodyClass = 'calendar';

block additionalCss
    link(rel='stylesheet', href='/static/bower_components/scheduler/codebase/dhtmlxscheduler.css')

block content
    div(id="scheduler_here" class="dhx_cal_container" style='width:100%; height:100%;')
        div.dhx_cal_navline
            div.dhx_cal_prev_button
            div.dhx_cal_next_button
            div.dhx_cal_today_button
            div.dhx_cal_date
            div.dhx_cal_tab(name="day_tab" style="right:204px;")
            div.dhx_cal_tab(name="week_tab" style="right:140px;")
            div.dhx_cal_tab(name="month_tab" style="right:76px;")
        div.dhx_cal_header
        div.dhx_cal_data


block specificJs
    script(src="/static/bower_components/scheduler/codebase/dhtmlxscheduler.js")
    script(src="/static/scripts/users/calendar.js")